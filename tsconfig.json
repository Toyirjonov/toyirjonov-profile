{
  "compilerOptions": {
    // ---- Папки проекта ----
    "rootDir": "./src",
    "outDir": "./dist",

    // ---- Среда исполнения ----
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    // ---- Поддержка React ----
    "jsx": "react-jsx",

    // ---- Проверки типов ----
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // ---- Качество кода ----
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,

    // ---- Импорт и модули ----
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    // ---- Для отладки ----
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // ---- Типы ----
    "types": [],

    // ---- Настройки путей (опционально) ----
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
